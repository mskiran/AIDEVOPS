pipeline {
    agent any
     environment {
        ANSIBLE_PLAYBOOK = 'ansible/run_test.sh.yml'
        ANSIBLE_INVENTORY = 'ansible/hosts.ini'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'jenkinscred',
                    url: 'https://github.com/mskiran/AIDEVOPS.git'
            }
        }
        

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook playbook: ANSIBLE_PLAYBOOK, inventory: ANSIBLE_INVENTORY
            }
        }
        stage('Greetings'){
            steps {
                echo "Stage one is checkout "
                echo "Stage two is run playbook"
            }
        }
    }
}
